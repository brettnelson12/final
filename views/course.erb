<div class="row">
    <div class="col-sm-9">
        <h2>
            <i class="fas fa-golf-ball"></i>
        </h2>
        <h1><%= @course[:title] %></h1>
        <p><%= @course[:description] %></p>
        <% for review in @reviews %>
            <div class="media">
                <% if review[:going] %>
                    <i class="fas fa-thumbs-up fa-3x mr-3"></i>
                <% else %>
                    <i class="fas fa-thumbs-down fa-3x mr-3"></i>
                <% end %>
                <div class="media-body">
                    <h5 class="mt-0"><%= @users_table.where(id: review[:user_id]).to_a[0][:name] %></h5>
                    <%= review[:comments] %>
                </div>
            </div>
        <% end %>
        <p class="mt-5">
            <% if @current_user %>
                <a href="/courses/<%= @course[:id] %>/reviews/new" class="btn btn-primary">Submit a review!</a>
            <% else %>
                <a href="/logins/new" class="btn btn-danger">Please sign in to Review</a>
            <% end %>
        </p>
    </div>
    <div class="col-sm-3">
        <h3>Where?</h3>
        <p><%= @course[:location] %></p>
        <h3>Par?</h3>
        <p><%= @course[:par] %></p>
    </div>
</div>

<div class="container mt-5">
    <h1>Take me there...</h1>
    <iframe
    width="600"
    height="450"
    frameborder="0" style="border:0"
    src="https://www.google.com/maps/embed/v1/place?key=AIzaSyCtovsQvkIUWlNqtYwXY87gEd4ZSmJEhMw&q=<%= "#{@lat}, #{@long}" %>&zoom=6" allowfullscreen>
    </iframe>
    <p>
</div>



